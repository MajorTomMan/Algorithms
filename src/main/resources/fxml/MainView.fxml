<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="750.0" prefWidth="1080.0" 
            style="-fx-background-color: #1A1A1A;" 
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="55.0" spacing="25.0" 
              style="-fx-background-color: #252525; -fx-border-color: #333333; -fx-border-width: 0 0 1 0;">
            <padding><Insets left="20.0" right="20.0" /></padding>
            
            <Label text="MajorTom Lab 2.0" style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold;">
                <font><Font size="16.0" /></font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <HBox alignment="CENTER" spacing="15.0">
                <Label fx:id="compareLabel" text="Compares: 0" style="-fx-text-fill: #E0E0E0; -fx-font-family: 'Monospaced';" />
                <Separator orientation="VERTICAL" prefHeight="15.0" style="-fx-opacity: 0.2;" />
                <Label fx:id="actionLabel" text="Idle" style="-fx-text-fill: #888888;" />
                <Separator orientation="VERTICAL" prefHeight="15.0" style="-fx-opacity: 0.2;" />
                <Label fx:id="timeLabel" text="0 ms" style="-fx-text-fill: #4A90E2; -fx-font-weight: bold;" />
            </HBox>
        </HBox>
    </top>

    <right>
        <VBox prefWidth="280.0" spacing="18.0" 
              style="-fx-background-color: #222222; -fx-border-color: #333333; -fx-border-width: 0 0 0 1;">
            <padding><Insets bottom="20.0" left="15.0" right="15.0" top="20.0" /></padding>
            
            <Label text="CONTROL PANEL" style="-fx-text-fill: #666666; -fx-font-size: 11px; -fx-font-weight: bold;" />
            
            <Button fx:id="startBtn" maxWidth="Infinity" prefHeight="45.0" 
                    style="-fx-background-color: #3A7BD5; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" text="START" />
            
            <Button fx:id="pathfindBtn" maxWidth="Infinity" prefHeight="45.0" 
                    style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand;" 
                    text="FIND PATH" visible="false" managed="false" />

            <Button fx:id="resetBtn" onAction="#handleResetAction" maxWidth="Infinity" prefHeight="35.0"
                    style="-fx-background-color: transparent; -fx-border-color: #444444; -fx-text-fill: #BBBBBB; -fx-background-radius: 4;" text="RESET" />
            
            <Separator style="-fx-opacity: 0.1;" />
            
            <VBox spacing="8.0">
                <Label text="Simulation Speed" style="-fx-text-fill: #888888; -fx-font-size: 12px;" />
                <Slider fx:id="speedSlider" blockIncrement="10.0" min="1.0" value="50.0" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />
            
            <Label text="CONSOLE LOG" style="-fx-text-fill: #666666; -fx-font-size: 11px; -fx-font-weight: bold;" />
            <TextArea fx:id="logArea" editable="false" prefHeight="280.0" wrapText="true" 
                      style="-fx-control-inner-background: #0F0F0F; -fx-text-fill: #00FF41; -fx-font-family: 'Monospaced'; -fx-font-size: 12px; -fx-border-color: #333333;" />
        </VBox>
    </right>

    <center>
        <StackPane fx:id="canvasContainer" style="-fx-background-color: #1A1A1A;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </StackPane>
    </center>

</BorderPane>