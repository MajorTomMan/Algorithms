<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="800.0" prefWidth="1200.0"
    style="-fx-background-color: #1A1A1A;"
    xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="55.0" spacing="25.0"
            style="-fx-background-color: #252525; -fx-border-color: #333333; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <Label text="MajorTom Lab 2.0" style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold;" />

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="15.0">
                <Label fx:id="compareLabel" text="比较: 0"
                    style="-fx-text-fill: #61AFEF; -fx-font-family: 'Monospaced';" />
                <Label fx:id="actionLabel" text="操作: 0" style="-fx-text-fill: #E06C75;" />
                <Separator orientation="VERTICAL" prefHeight="15.0" style="-fx-opacity: 0.2;" />
                <Label fx:id="timeLabel" text="0.000 s"
                    style="-fx-text-fill: #98C379; -fx-font-weight: bold;" />
            </HBox>
        </HBox>
    </top>

    <right>
        <VBox prefWidth="280.0" spacing="15.0"
            style="-fx-background-color: #222222; -fx-border-color: #333333; -fx-border-width: 0 0 0 1;">
            <padding>
                <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
            </padding>

            <Label text="CONTROLS"
                style="-fx-text-fill: #666666; -fx-font-size: 11px; -fx-font-weight: bold;" />
            <Button fx:id="startBtn" onAction="#handleStartAction" maxWidth="Infinity"
                prefHeight="40.0" text="开始遍历" />
            <Button fx:id="resetBtn" onAction="#handleResetAction" maxWidth="Infinity"
                prefHeight="35.0" text="重置系统" />

            <Separator style="-fx-opacity: 0.1;" />

            <Label text="Speed Delay (ms)" style="-fx-text-fill: #888888;" />
            <Slider fx:id="speedSlider" max="500.0" min="0.0" value="50.0" />

            <Region VBox.vgrow="ALWAYS" />

            <Label text="CONSOLE LOG"
                style="-fx-text-fill: #666666; -fx-font-size: 11px; -fx-font-weight: bold;" />
            <TextArea fx:id="logArea" editable="false" prefHeight="300.0"
                style="-fx-control-inner-background: #0F0F0F; -fx-text-fill: #00FF41; -fx-font-family: 'Monospaced'; -fx-font-size: 12px;" />
        </VBox>
    </right>

    <center>
        <StackPane fx:id="canvasContainer" style="-fx-background-color: #1A1A1A;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </StackPane>
    </center>
    <bottom>
        <HBox fx:id="controlPanel" alignment="CENTER" prefHeight="70.0" spacing="20.0"
            style="-fx-background-color: #252525;">
            <Button fx:id="startBtn" onAction="#handleStartAction" text="开始执行" />
            <Button fx:id="resetBtn" onAction="#handleResetAction" text="重置系统" />
            <Separator orientation="VERTICAL" prefHeight="30.0" />
            <Label text="延迟 (ms):" style="-fx-text-fill: #888888;" />
            <Slider fx:id="speedSlider" max="500.0" min="0.0" value="50.0" prefWidth="200.0" />
        </HBox>
    </bottom>
</BorderPane>