<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER_LEFT" spacing="20"
      style="-fx-background-color: #0A0A0E; -fx-padding: 10 20 10 20; -fx-border-color: #1E1E26; -fx-border-width: 1 0 0 0;">

    <VBox spacing="4" alignment="CENTER_LEFT">
        <Label fx:id="densityLabel" text="%ctrl.maze.density"
               style="-fx-text-fill: #666666; -fx-font-size: 10px; -fx-font-weight: bold; -fx-letter-spacing: 1px;" />
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Slider fx:id="sizeSlider" min="11" max="99" value="51" prefWidth="150"
                    showTickMarks="false" snapToTicks="true" majorTickUnit="2"
                    style="-fx-cursor: hand;" />
            <Label fx:id="sizeValueLabel" text="51x51"
                   style="-fx-text-fill: #00A0FF; -fx-font-family: 'Consolas'; -fx-font-size: 11px;" />
        </HBox>
    </VBox>

    <Separator orientation="VERTICAL" prefHeight="30" style="-fx-opacity: 0.1;" />

    <VBox spacing="4">
        <Label fx:id="genTitleLabel" text="%ctrl.maze.gen_title"
               style="-fx-text-fill: #666666; -fx-font-size: 10px; -fx-font-weight: bold;" />
        <HBox spacing="10">
            <ComboBox fx:id="algoSelector" prefWidth="160"
                      style="-fx-background-color: #121218; -fx-border-color: #333333; -fx-text-fill: white; -fx-font-size: 12px;" />
            
            <Button fx:id="buildBtn" text="%btn.maze.build" onAction="#handleGenerate"
                    style="-fx-background-color: rgba(0, 160, 255, 0.1); -fx-border-color: #00A0FF; -fx-text-fill: #00A0FF; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 5 15;" />
        </HBox>
    </VBox>

    <Separator orientation="VERTICAL" prefHeight="30" style="-fx-opacity: 0.1;" />

    <VBox spacing="4">
        <Label fx:id="solveTitleLabel" text="%ctrl.maze.solve_title"
               style="-fx-text-fill: #666666; -fx-font-size: 10px; -fx-font-weight: bold;" />
        <HBox spacing="10">
            <ComboBox fx:id="solverSelector" prefWidth="130"
                      style="-fx-background-color: #121218; -fx-border-color: #333333; -fx-text-fill: white; -fx-font-size: 12px;" />
            
            <Button fx:id="solveBtn" text="%btn.maze.solve" onAction="#handleSolve"
                    style="-fx-background-color: rgba(255, 0, 150, 0.1); -fx-border-color: #FF0096; -fx-text-fill: #FF0096; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 5 15;" />
        </HBox>
    </VBox>

    <Region HBox.hgrow="ALWAYS" />

    <Button fx:id="resetBtn" text="%btn.reset" onAction="#handleReset"
            style="-fx-background-color: transparent; -fx-border-color: #5C5C5C; -fx-text-fill: #888888; -fx-cursor: hand; -fx-font-size: 11px;" />
</HBox>