<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
    alignment="CENTER_LEFT" spacing="15">

    <ComboBox fx:id="algoSelector" prefWidth="180"
        style="-fx-background-color: #121218; -fx-text-fill: white;">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Recursive Backtracker" />
                <String fx:value="Prim's Algorithms" />
                <String fx:value="A* Pathfinding" />
            </FXCollections>
        </items>
    </ComboBox>

    <VBox spacing="2">
        <Label text="GRID INTENSITY" style="-fx-text-fill: #5C5C5C; -fx-font-size: 9px;" />
        <Slider fx:id="sizeSlider" min="11" max="61" value="31" prefWidth="120" />
    </VBox>

    <Button text="INITIATE" onAction="#handleInitiate"
        style="-fx-background-color: transparent; -fx-border-color: #00A0FF; -fx-text-fill: #00A0FF;" />
</HBox>