<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
        alignment="CENTER_LEFT" spacing="15"
        style="-fx-padding: 5 0 5 0;">

        <Label text="%ctrl.sort.size"
                style="-fx-text-fill: #5C5C5C; -fx-font-size: 11px; -fx-font-weight: bold;" />

        <Slider fx:id="sizeSlider" min="5" max="100" value="20" prefWidth="120"
                style="-fx-cursor: hand;" />

        <Separator orientation="VERTICAL" prefHeight="20" style="-fx-opacity: 0.2;" />

        <Button text="%btn.sort.gen" onAction="#handleGenerate"
                style="-fx-background-color: transparent; -fx-border-color: #5C5C5C; 
                   -fx-text-fill: #888888; -fx-cursor: hand; -fx-font-size: 11px;" />

        <Button text="%btn.sort.run" onAction="#handleSort"
                style="-fx-background-color: transparent; -fx-border-color: #00A0FF; 
                   -fx-text-fill: #00A0FF; -fx-cursor: hand; -fx-font-weight: bold; -fx-font-size: 11px;" />
</HBox>