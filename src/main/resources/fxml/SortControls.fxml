<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      alignment="CENTER_LEFT" spacing="15">
    
    <Label text="ARRAY SIZE:" style="-fx-text-fill: #5C5C5C; -fx-font-size: 11px; -fx-font-weight: bold;"/>
    <Slider fx:id="sizeSlider" min="5" max="100" value="20" prefWidth="120"/>
    
    <Separator orientation="VERTICAL" prefHeight="20" style="-fx-opacity: 0.2;"/>
    
    <Button text="GENERATE" onAction="#handleGenerate"
            style="-fx-background-color: transparent; -fx-border-color: #5C5C5C; -fx-text-fill: #888888;"/>
    
    <Button text="SORT" onAction="#handleSort"
            style="-fx-background-color: transparent; -fx-border-color: #00A0FF; -fx-text-fill: #00A0FF;"/>
</HBox>