<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.majortom.algorithms.core.visualization.impl.controller.MainController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #0A0A0E;">

    <left>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #121218; -fx-min-width: 250;">
            <Label text="LABORATORY" style="-fx-text-fill: #565656; -fx-font-weight: bold;"/>
            
            <Button text="Sorting Algorithms" onAction="#switchToSortModule" maxWidth="Infinity"/>
            <Button text="Maze Generation" onAction="#switchToMazeModule" maxWidth="Infinity"/>
            
            <Separator style="-fx-opacity: 0.2;"/>
            
            <Label text="STATISTICS" style="-fx-text-fill: #565656;"/>
            <Label fx:id="statsLabel" text="System Ready" style="-fx-text-fill: #00FF9C; -fx-font-family: 'Consolas';"/>
            
            <Label text="SYSTEM LOG" style="-fx-text-fill: #565656;"/>
            <TextArea fx:id="logArea" VBox.vgrow="ALWAYS" editable="false" 
                      style="-fx-control-inner-background: #050507; -fx-text-fill: #888; -fx-font-family: 'Consolas';"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="visualizationContainer" style="-fx-padding: 10;"/>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: #121218;">
            <HBox spacing="10">
                <Button fx:id="startBtn" text="START" style="-fx-background-color: #00FF9C; -fx-text-fill: black;"/>
                <Button fx:id="pauseBtn" text="PAUSE" />
                <Button fx:id="resetBtn" text="RESET" />
            </HBox>
            
            <VBox spacing="5">
                <Label text="ANIMATION DELAY (MS)" style="-fx-text-fill: white; -fx-font-size: 10;"/>
                <Slider fx:id="delaySlider" min="0" max="500" value="50" showTickLabels="true"/>
            </VBox>

            <HBox fx:id="customControlBox" spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" />
        </HBox>
    </bottom>

</BorderPane>